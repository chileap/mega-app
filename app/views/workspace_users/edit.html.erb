<%= content_for :page_title do %>
  <h1 class="text-2xl font-bold"><%= @workspace_user.user.name %></h1>
<% end %>


<%= content_for :content_sidebar do %>
  <div class="w-72 flex flex-row lg:overflow-y-auto md:border-r border-gray-200 bg-white p-4 lg:block">
    <%= render partial: "shared/account_navbar" %>
  </div>
<% end %>

<div class="flex flex-wrap my-4 w-full">
  <div class="w-full p-4">
    <div class="p-4 bg-white">
      <div class="flex items-center">
        <%= workspace_avatar @workspace, class: "flex-shrink-0 rounded-full mr-4 h-10 w-10" %>
        <h1 class="h3">
          <%= @workspace_user.user.name %>
        </h1>
      </div>

      <p class="my-4 text-gray-700"><%= t(".description", user: @workspace_user.user.name || @workspace_user.user.email) %></p>

      <%= render "form", workspace_user: @workspace_user %>
    </div>
  </div>
</div>
