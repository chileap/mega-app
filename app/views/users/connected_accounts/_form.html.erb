<div class="bg-white">
  <%= form_with(model: connected_account) do |form| %>
    <%= render "shared/error_messages", resource: form.object %>
    <%= form.hidden_field :provider, value: connected_account.provider %>
    <div class="form-group">
      <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :email, class: "form-control", required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="form-group">
      <%= form.label :app_specific_password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :app_specific_password, required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.button 'Connect', class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>