<% content_for :title, "Dashboard" %>

<header class="flex items-center border-b border-gray-300 py-4 px-2">
  <div class="flex lg:hidden pr-6">
    <button data-action="slideover#_show" type="button" class="border-r border-gray-200 text-gray-500 focus:outline-none hover:bg-white hover:text-gray-700 lg:hidden">
      <span class="sr-only">Open sidebar</span>
      <!-- Heroicon name: outline/bars-3-bottom-left -->
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
      </svg>
    </button>
  </div>
  <h1 class="main-content__page-title">
    Dashboard
  </h1>
</header>

<div class="h-full md:flex md:flex-1 sm:block md:items-stretch overflow-y-auto">
  <section class="main-content__body w-full">
    <div class="flex">
      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">Total Revenue</h4>
        <p class="text-3xl font-bold"><%= number_to_currency @total_revenue %></p>
      </div>

      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">Revenue Last 12mo</h4>
        <p class="text-3xl font-bold"><%= number_to_currency @last_12_mos %></p>
      </div>

      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">Last Month's Revenue</h4>
        <p class="text-3xl font-bold"><%= number_to_currency @last_month %></p>
      </div>

      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">This Month's Revenue To Date</h4>
        <p class="text-3xl font-bold"><%= number_to_currency @this_month %></p>
      </div>
    </div>

    <div class="flex">
      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">Users</h4>
        <p class="text-3xl font-bold"><%= @users %></p>
      </div>

      <div class="flex-1 shadow rounded p-4 m-4 text-center">
        <h4 class="font-normal mb-2">Active Subscriptions</h4>
        <p class="text-3xl font-bold"><%= @subscriptions %></p>
      </div>
    </div>
  </section>
</div>
