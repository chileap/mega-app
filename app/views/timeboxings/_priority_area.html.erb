<% priority_columns = priority_items.count >= 3 ? 1 : (3 - priority_items.count) %>

<h4 class="text-lg pb-5">Must Do Tasks</h4>

<ul class="list-none timeboxing-items" id="top-priority-items">
  <%= turbo_frame_tag "priority-items" do %>
    <% priority_items.each do |item| %>
      <%= render partial: "timeboxing_items/priority_item", locals: { item: item } %>
    <% end %>

    <% priority_columns.times do |t|%>
      <%= render partial: "timeboxings/item_field_form", locals: { item: TimeboxingItem.new(priority: true), timeboxing: timeboxing } %>
    <% end %>
  <% end %>
</ul>