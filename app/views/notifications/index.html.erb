<%= content_for :page_title do %>
  <h1 class="text-2xl font-bold"><%= t(".title") %></h1>
<% end %>

<section class="flex h-full pt-8 px-8 min-w-0 flex-1 flex-col overflow-hidden xl:order-last">
  <div class="w-full bg-white rounded-lg sm:mx-auto overflow-scroll pb-8">
    <ul>
      <%= render partial: "notifications/notification", collection: @notifications, cached: true %>
    </ul>

    <% if @notifications.empty? %>
      <div class="px-4 py-3 text-gray-700 text-center"><%= t(".empty_placeholder") %></div>
    <% end %>

    <% if @pagy.pages > 1 %>
      <div class="text-center mt-8">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</section>
