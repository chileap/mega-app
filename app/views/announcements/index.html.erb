<%= content_for :page_title do %>
  <h1 class="text-2xl font-bold"><%= t(".title") %></h1>
<% end %>

<div class="container mx-auto max-w-4xl overflow-y-auto">
  <p class="mt-2 text-center text-xl text-gray-700"><%= t(".description", name: Jumpstart.config.application_name) %></p>

  <div class="mt-6 flex flex-col divide-y divide-gray-200 bg-white rounded-lg border border-gray-200">
    <%= render @announcements %>

    <% if @announcements.empty? %>
      <div class="p-4 lg:p-10"><%= t(".empty_placeholder") %></div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="text-center mt-8">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
