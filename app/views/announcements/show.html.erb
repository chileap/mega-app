<%= content_for :page_title do %>
  <div class="flex">
    <%= link_to announcements_path, class: "pr-3" do %>
      <svg class="h-7 w-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>
    <% end %>

    <h1 class="text-2xl font-bold"><%= t(".title") %></h1>
  </div>
<% end %>

<div class="container mx-auto max-w-4xl overflow-y-auto">
  <div class="mt-6 flex flex-col bg-white rounded-lg border border-gray-200">
    <%= render @announcement %>
  </div>
</div>
