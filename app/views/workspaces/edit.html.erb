<%= content_for :page_title do %>
  <h1 class="text-2xl font-bold"><%= @workspace.name %></h1>
<% end %>


<%= content_for :content_sidebar do %>
  <div class="w-72 flex flex-row lg:overflow-y-auto md:border-r border-gray-200 bg-white p-4 lg:block">
    <%= render partial: "shared/account_navbar" %>
  </div>
<% end %>

<div class="flex flex-wrap my-4 lg:px-4 w-full">
  <div class="w-full">
    <div class="p-4 bg-white">
      <div class="mb-4 flex items-center">
        <%= workspace_avatar @workspace, class: "flex-shrink-0 rounded-full mr-4 h-8 w-8" %>
        <h1 class="h3">
          <%= link_to @workspace.name, @workspace, class: "text-black" %>
          <%= render_svg "icons/cheveron-right", styles: "fill-current icon-sm text-gray-600 inline-block" %>
          <%= t(".title") %>
        </h1>
      </div>

      <%= render 'form', workspace: @workspace %>
    </div>

    <%= render "workspaces/transfers/form", workspace: @workspace if @workspace.can_transfer?(current_user) %>
  </div>
</div>
